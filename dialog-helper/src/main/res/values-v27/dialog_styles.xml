<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseFullscreenDialog" parent="Theme.Material3.DayNight.Dialog">
        <!--这四个配置是android:Theme.Material.NoActionBar.Fullscreen中的-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--使用此标志会导致真全屏，状态栏会隐藏，不使用此标志也能全屏，因此没必要使用此标志-->
        <!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item><!--api 27以上-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 设置对话框进入和退出动画 -->
        <!--        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>-->
        <!--        <item name="android:windowExitAnimation">@anim/dialog_out</item>-->

        <!--如果ComponentDialog所用style有动画，你还想用Compose中的动画作显示隐藏动画，会导致动画效果很难看，这需要将动画指定为null-->
        <!--更好的解决办法是向谷歌学习，给Component使用一个没有parent的style。如下方注释1处 -->
<!--        <item name="android:windowEnterAnimation">@null</item>-->
<!--        <item name="android:windowExitAnimation">@null</item>-->
    </style>

    <!--注释1-->
